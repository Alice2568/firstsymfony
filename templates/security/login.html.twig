{% extends 'base.html.twig' %}

 {% block body %}
{% block title %}Connexion{% endblock %}
 {% include 'partial/_header.html.twig' %}
 <h1 class="text-center text-white">Connexion</h1>
<div class="login text-white align-items-center py-4 d-flex">


{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('app_login') }}" method="post">
    {% if app.user %}
            <div class="mb-3">
               Vous êtes déjà connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
    <div class="col-6 mx-auto">  
    <label for="email">Email: </label>
    <input type="text" id="email" name="_username" value="{{ last_username }}" required /></div>
    <div class="col-6 mx-auto mt-2">
    <label for="password">Mot de passe: </label>
    <input type="password" id="password" name="_password" required /></div>

    <input type="hidden" name="_csrf_token"
       value="{{ csrf_token('authenticate') }}">
    <div class="d-flex justify-content-center">
    <button class="btn btn-outline-danger col-3 col-sm-4 mx-auto mt-3 center" type="submit">Connexion</button></div>
    <p class="col-6 mx-auto texte-center mt-2"><a href="#">Mot de passe oublié </a></p>
    <p class="col-6 mx-auto text-center">Pas encore inscrit? <a href="{{ path('app_register')}}">  M'inscrire</a></p>
</form>
</div>
{% include 'partial/_footer.html.twig' %}

 {% endblock %}
